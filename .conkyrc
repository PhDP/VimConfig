# Conky
#
# http://aleksei.biz
#
# Settings
#####################
background yes
use_xft yes
xftfont Ubuntu Mono:size=14
xftalpha 1
update_interval 1.0
total_run_times 0
own_window yes
own_window_transparent yes
own_window_type window
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
double_buffer yes
minimum_size 250 250
maximum_width 250
draw_shades no
draw_outline no
draw_borders no
draw_graph_borders no
default_color black
default_shade_color black
default_outline_color white
alignment top_right
gap_x 12
gap_y 12
uppercase no
cpu_avg_samples 2
override_utf8_locale no
#####################
#  Output
#####################
TEXT
SYSTEM INFO
${hr}
Time:$alignr${time %H:%M:%S}
Date:$alignr${time %Y-%m-%d}
RAM:$alignr$mem/$memmax
Disk usage:$alignr${fs_used /}/${fs_size /}
Download: $alignr${downspeedf wlan0} Kb/s
Upload: $alignr${upspeedf wlan0} Kb/s
CPU usage:$alignr${cpu cpu0}%
${cpugraph cpu1}

PROCESSES $alignr PID  CPU
${hr}
${top name 1} $alignr ${top pid 1} ${top cpu 1}
${top name 2} $alignr ${top pid 2} ${top cpu 2}
${top name 3} $alignr ${top pid 3} ${top cpu 3}
${top name 4} $alignr ${top pid 4} ${top cpu 4}
${top name 5} $alignr ${top pid 5} ${top cpu 5}

WIFI
${wireless_link_bar wlan0}

BATTERY ($battery)
$battery_bar

